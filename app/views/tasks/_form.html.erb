
<%= form_with(model: @task, url: user_tasks_path(current_user), local: true) do |f| %>
    
  <%= render 'shared/error_messages', object: f.object %>
  
  <%= f.label :content, class: "label-form" %>
  <%= f.text_field :content, class: "form-control" %>
  <%= f.label :description, class: "label-form" %>
  <%= f.text_area :description, rows: 5, class: "form-control" %>
  <%= f.submit "#{yield(:btn_text)}", class: "btn #{yield(:btn_size)} btn-primary btn-form" %>
  <%= link_to "キャンセル", "#", class: "btn btn-default btn-#{yield(:btn_off)} btn-form" %>
<% end %>
    
<% provide(:title, @user.name) %>

<div class="container">
  <h1><%= @user.name %>のタスク一覧</h1>
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <table class="table table-hover" id="table-tasks">
        <thead>
          <tr>
            <th>名称</th>
            <th>作成日</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @tasks.each do |task| %>
            <tr>
              <td>
                <%= link_to task.content, user_task_path(task.user_id, task.id) %>
              </td>
              <td><%= task.created_at %></td>
              <td>
                <%= link_to "編集", "#", class: "btn btn-success" %>
                <%= link_to "削除", "#", class: "btn btn-danger" %>
              </td>
            </tr>
          <% end %>
          
        </tbody>
      </table>
        
    </div>
    
  </div>
</div>